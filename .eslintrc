{
  "extends": "eslint:recommended",

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "globals": {
    "__DEV__": true,
    "__DEBUG__": true
  },

  "plugins": [
    "react"
  ],

  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },

  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "eqeqeq": [2, "smart"],
    "strict": 0,
    "indent": [2, 2],
    "camelcase": 0,
    "consistent-return": 0,
    "no-mixed-requires": 0,
    "no-underscore-dangle": 0,
    "no-console": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": 1,
    "keyword-spacing": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/react-in-jsx-scope": 2
  }
}
